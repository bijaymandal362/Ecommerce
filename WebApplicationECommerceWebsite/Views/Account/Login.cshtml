@model WebApplicationECommerceWebsite.Models.ViewModel.LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/datepicker3.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>


    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Log in</div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <fieldset>
                        <h2 class="text-danger">@ViewBag.Action</h2>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter Username", @autofocus = "", @required = "required" })

                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter Password", @required = "required" })
                        </div>
                        <input type="submit" class="btn btn-primary" value="Login" />
                        <a href="@Url.Action("ForgetPassword","Account")">Forget Password</a>

                    </fieldset>
                    }
                </div>
            </div>
        </div><!-- /.col-->
    </div>


    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>

